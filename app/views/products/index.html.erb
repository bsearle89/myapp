<p id="notice"><%= notice %></p>

<h1 class="product-page-title">Products</h1>

<div class="container">
  <div class="row" id="product-rows">
    <% @products.each do |product| %>
      <div class="col-sm-2 col-md-4 product-columns">
        <%= image_tag(product.image_url, class: "img-responsive") %>
        <a href="#"><h2><%= product.name %></h2></a>
        <p><%= product.description %></p>
        <p><%= product.colour %></p>
        <strong><p><%= product.price %></p></strong>
        <p><%= link_to 'Edit', edit_product_path(product) %></p>
      </div> <!-- end col -->
    <% end %>
  </div> <!-- end row -->
</div><!-- end container -->
<br>

<%= link_to 'New Product', new_product_path %>