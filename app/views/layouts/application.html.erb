<!DOCTYPE html>
<html>
  <head>
    <title>Myapp</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.5.5/js/bootstrap.min.js"></script>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
  </head>

  <body>
    <div class="page-wrap">
      <nav class="navbar navbar-default">
        <div class="container-fluid nav-container">

          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#"><%= image_tag("navbar-bike-logo.png", class: "img-responsive nav-bar-logo") %></a>
          </div> <!-- end navbar-header -->

          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
              <li><a href="#">About</a></li>
              <li><a href="#">Contact</a></li>
            </ul> <!-- end navbar-right -->
          </div> <!-- end bs-example-navbar-collapse-1 -->
      
        </div> <!-- end nav-container -->
      </nav> <!-- end navigation bar -->

      <%= yield %>

      <footer class="site-footer">
        <p>&copy; 2017 Bike Berlin</p>
      </footer> <!-- end site footer -->
    </div> <!-- end page-wrap -->

    <!-- JavaScript -->

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    
  </body>
</html>
