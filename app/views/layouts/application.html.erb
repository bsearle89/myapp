<!DOCTYPE html>
<html>
  <head>
    <title>Myapp</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.5.5/js/bootstrap.min.js"></script>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
  </head>

  <body>
    <div class="page-wrap">
      <nav class="navbar navbar-default">
        <div class="container-fluid nav-container">

          <div class="bulletin">
            <p class="notice"><%= notice %></p>
            <p class="alert"><%= alert %></p>
          </div> <!-- end bulletin -->

          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to "", static_pages_index_path %><a class="navbar-brand" href="/static_pages/index"><%= image_tag("navbar-bike-logo.png", class: "img-responsive nav-bar-logo") %></a>
          </div> <!-- end navbar-header -->

          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to "Products", products_path %></li>
              <li><%= link_to "About", static_pages_about_path %></li>
              <li><%= link_to "Contact", static_pages_contact_path %></li>
              <li>
                <%= form_with(url: products_path, method: 'get', local: true, class: 'navbar-form navbar-right') do |form| %>
                  <%= form.text_field :q, id: 'q', value: params[:q], class: 'form-text-field' %>
                  <%= form.submit 'Search', class: 'btn btn-default' %>
                <% end %>
              </li>
              <ul class="nav login-logout">
                <li>
                <% if user_signed_in? %>
                  <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
                <% else %>
                  <%= link_to('Login', new_user_session_path) %>
                <% end %>
                </li>
              </ul><!-- end login-logout -->
            </ul> <!-- end navbar-right -->
            
          </div> <!-- end bs-example-navbar-collapse-1 -->
      
        </div> <!-- end nav-container -->
      </nav> <!-- end navigation bar -->

      <%= yield %>

      <footer class="site-footer">
        <p>&copy; 2017 Bike Berlin</p>
      </footer> <!-- end site footer -->
    </div> <!-- end page-wrap -->

    <!-- JavaScript -->

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    
  </body>
</html>
